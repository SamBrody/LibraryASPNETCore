@model IEnumerable<Library.Application.Dto.BookDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShelfObj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReaderObj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TakeDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <image src="/images/@item.PhotoPath"
                           height="160" width="120" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShelfObj.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReaderObj.Full_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TakeDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Описание</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
