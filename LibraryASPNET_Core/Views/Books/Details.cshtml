@model Library.Application.Dto.BookDTO

@{
    ViewData["Title"] = "Details";
}

<h1>Подробности</h1>

<div>
    <h4>Книга</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhotoPath)
        </dt>
        <dd class="col-sm-10">
            <image src="/images/@ViewBag.PhotoPath"
                   height="160" width="120" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorDTOs)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.AuthorDTOs)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                </tr>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryDTOs)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.CategoryDTOs)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                </tr>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TagDTOs)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.TagDTOs)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                </tr>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShelfName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShelfName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReaderName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReaderName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TakeDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TakeDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-action="Index">Вернуться к списку</a>
</div>
